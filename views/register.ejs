<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link rel="stylesheet" href="/css/form.css?v=2.2"> -->
    <link rel="stylesheet" href="/css/style.css?v=2.2">
    <link rel="icon" href="/images/webp/mei_logo_web.webp" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
    <title>Register</title>
</head>

<body>
    <div class="nav" id="nav">
        <ul class="navbar" id="navbar">
            <ul class="navbar" id="navbar">
                <li class="links"><a class="logosredes" href="/"> 
                    <img class="wsplogo" src="/images/webp/home.webp" alt="con_logo"></a></li>
        </ul>
        <!-- <a href="javascript:void(0);" class="icon" onclick="navbar()">
            <i class="fa fa-bars"></i>
        </a> -->
    </div>
    <div class="relleno2"></div>
    <div class="formu">
        <form action="/auth/signup" method="post">
            <div class="inputforms">
                <div class="lblinput">
                    <div class="inputlbl">
                        <label class="lang lblform" key="F1" for="user">USUARIO:</label>
                        <input class="forminput" type="text" id="user" name="user" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F1" for="fullname">NOMBRE COMPLETO:</label>
                        <input class="forminput" type="text" id="fullname" name="fullname" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="birthdate">FECHA DE NACIMIENTO:</label><br />
                        <input class="forminput" placeholder="DD-MM-AAAA" maxlength="10" type="text" id="birthdate" name="birthdate" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="address">DIRECCIÓN:</label>
                        <input class="forminput" type="text" id="address" name="address" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="comune">COMUNA:</label>
                        <input class="forminput" type="text" id="comune" name="comune" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="region">REGIÓN:</label>
                        <input type="text" hidden="true" id="region" value="<%= region %>">
                        <br />
                        <select class="select" name="region" id="regionSelect"></select>
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="country">PAÍS:</label>
                        <input class="forminput" type="text" id="country" name="country" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="phone">TELÉFONO:</label>
                        <input class="forminput" type="text" id="phone" name="phone" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="mail">EMAIL:</label>
                        <input class="forminput" type="text" id="mail" name="mail" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="pass">CONTRASEÑA:</label>
                        <input class="forminput" type="password" id="pass" name="pass" required><br />
                    </div>
                    <br />
                    <br />
                    <div class="inputlbl">
                        <input type="checkbox" id="conforme" onclick="checkedPolicy()">
                        <label class="lblform" for="conforme">Estoy de acuerdo con las <a href="/policy">políticas</a> de Meipulseras.cl</label>
                    </div>
                    <br />
            <input class="cotiza pe" type="submit" value="Enviar" id="aceptar" disabled="true">
        </form>
    </div>
    <script src="/js/date.js" type="text/javascript"></script>
    <script src="/js/region.js" type="text/javascript"></script>
    <script>
        function checkedPolicy(){
            var checked = document.getElementById("conforme");
            var disabled = document.getElementById("aceptar");

            if(checked.checked == true) {
                disabled.disabled = false;
            } else if (checked.checked == false) {
                disabled.disabled = true;
            }

        }
    </script>
</body>

</html>