<!doctype html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/style.css?v=2.2">
    <link rel="icon" href="/images/webp/mei_logo_web.webp" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.7.1.slim.min.js" integrity="sha256-kmHvs0B+OpCW5GVHUNjv9rOmY0IvSIRcf7zGUDTDQM8=" crossorigin="anonymous"></script>
    <title>Login</title>
</head>

<body onload="alerta()">
    <div class="nav" id="nav">
        <ul class="navbar" id="navbar">
            <li class="links"><a class="logosredes" href="/"> 
                <img class="wsplogo" src="/images/webp/home.webp" alt="con_logo"></a></li>
        </ul>
    </div>
    <div class="relleno"></div>
    <div class="formu">
        <form action="/auth/login" method="post">
            <div class="inputforms">
                <div class="lblinput">
                    <div class="inputlbl">
                        <label class="lang lblform" key="F1" for="user">USUARIO/EMAIL:</label>
                        <input class="forminput" type="text" id="user" name="user" required><br />
                    </div>
                    <br />
                    <div class="inputlbl">
                        <label class="lang lblform" key="F2" for="pass">CONTRASEÑA:</label>
                        <input class="forminput" type="password" id="pass" name="pass" required><br />
                    </div>
                    <br />
                    <a class="forgotpass" key="COTIZ" href="/forgot">¿Olvidó su contraseña?</a>
                    <br />
                    <br />
            <input class="cotiza pe" type="submit" value="Enviar" id="aceptar">
        </form>
    </div>
    <div class="relleno"></div>
    <div class="texto">
        <h4 class="lblform h4" key="REGISTER">¿No estás registrado?</h4>
        <br>
        <div>
            <a class="cotiza pe" key="REGISTER" href="/auth/signup">REGISTRAR</a>
        </div>
    </div>
    <p id="data" style="display: none;"><%= no %></p>
    <script src="/js/navbar.js" type="text/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>    
    <script>
        function alerta(){
        var alerta = document.getElementById('data').innerText;
        
        if(alerta === 'yes'){
            // alert('Usuario y/o contraseña incorrecta.');
            Swal.fire({
                title: 'Error',
                text: 'Usuario y/o contraseña incorrecta.',
                icon: 'error',
                confirmButtonText: 'Aceptar',
                showConfirmButton: true,
            }).then(function() {
                window.location = "/auth/login";
            });
            alerta = 'no';
        }
    }
    </script>
</body>

</html>